<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Briskpe-Cross-Platform-Suite" parallel="tests" thread-count="3">
  <listeners>
    <listener class-name="com.briskpe.framework.utils.TestListener"/>
  </listeners>

  <test name="Web">
    <parameter name="platform" value="WEB"/>
    <classes>
      <class name="com.briskpe.tests.LoginTest"/>
      <class name="com.briskpe.tests.DashBoardTest"/>
      <!-- Add more test classes here if needed -->
    </classes>
  </test>

  <test name="Android">
    <parameter name="platform" value="ANDROID"/>
    <classes>
      <class name="com.briskpe.tests.LoginTest"/>
      <class name="com.briskpe.tests.DashBoardTest"/>
    </classes>
  </test>

  <test name="iOS">
    <parameter name="platform" value="IOS"/>
    <classes>
      <class name="com.briskpe.tests.LoginTest"/>
      <class name="com.briskpe.tests.DashBoardTest"/>
    </classes>
  </test>
</suite>
